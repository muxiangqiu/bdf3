              <Property name="property">accountNonLocked</Property>
              <Editor/>
            </AutoFormElement>
            <AutoFormElement>
              <Property name="name">nickname</Property>
              <Property name="property">nickname</Property>
              <Property name="editorType">Label</Property>
              <Editor/>
